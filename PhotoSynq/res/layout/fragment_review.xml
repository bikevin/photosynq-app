<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:clickable="true"
	android:focusable="true"
	android:focusableInTouchMode="true"  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/reviewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Review"
            android:background="@color/green_google_play"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/reviewTitle"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="22dp"
            android:text="Mode"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mode"
            android:layout_below="@+id/tvMode"
            android:layout_marginTop="31dp"
            android:text="User"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvMode"
            android:layout_alignTop="@+id/user"
            android:text="Tushar Patil"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tvProjectName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/reviewTitle"
            android:layout_below="@+id/tvConnection"
            android:layout_marginTop="30dp"
            android:text="Make faire Tour !"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/TextView07"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/project"
            android:layout_below="@+id/project"
            android:layout_marginTop="36dp"
            android:text="Data"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvQuestions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/TextView07"
            android:layout_alignLeft="@+id/tvProjectName"
            android:text="Questions"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/tvMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/reviewTitle"
            android:layout_alignTop="@+id/mode"
            android:text="Streamlined Mode"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/connection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvConnection"
            android:layout_alignBottom="@+id/tvConnection"
            android:layout_alignParentLeft="true"
            android:text="Connection"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvConnection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvProjectName"
            android:layout_below="@+id/tvUserName"
            android:layout_marginTop="34dp"
            android:text="PhotosynQ18"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tvProjectName"
            android:layout_alignBottom="@+id/tvProjectName"
            android:layout_alignLeft="@+id/user"
            android:text="Project"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>
