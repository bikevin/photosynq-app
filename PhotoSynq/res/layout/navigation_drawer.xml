<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layoutDrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >
        </FrameLayout>

        <LinearLayout
            android:id="@+id/linearDrawer"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#ffaa00"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/userDrawer"
                android:layout_width="@dimen/navigation_layout_width"
                android:layout_height="60dp"
                android:background="#ffaa00" >

                <TextView
                    android:id="@+id/signOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="@string/sign_out"
                    android:textColor="#ffffff"
                    android:textSize="23sp" />

                 <TextView
                    android:id="@+id/userEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/signOut"
                    android:layout_below="@+id/signOut"
                    android:text="@string/user_email"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
                
                <!-- <ImageView
                    android:id="@+id/ImgDrawer"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="14dp"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/ic_user" /> -->
            </RelativeLayout>

            <ListView
                android:id="@+id/listDrawer"
                android:layout_width="@dimen/navigation_layout_width"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:background="#ffffff"
                android:cacheColorHint="#aaaaaa"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="1dp" />
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>

</RelativeLayout>