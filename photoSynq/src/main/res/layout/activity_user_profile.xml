<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.photosynq.app.navigationDrawer.UserProfile">

<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    android:background="#ffffff">

    <TableRow
        android:id="@+id/user_profile"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:background="#f1f5f7"
        android:layout_weight=".15">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.photosynq.app.navigationDrawer.CircularImageView
                android:id="@+id/user_profile_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/fall_leaves"/>

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_below="@id/user_profile_image"
                android:textSize="25sp"
                android:layout_margin="5dp"
                android:text="Greg Austic"
                android:textColor="#616161"/>

            <TextView
                android:id="@+id/institute_name"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8c8c8c"
                android:textSize="15sp"
                android:layout_below="@id/user_name"/>
        </LinearLayout>
    </TableRow>


    <TableRow
        android:id="@+id/user_contrb_awards"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".85"
        android:background="#ffffff"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_contacts"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_contact"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight=".5"
                        android:text="Contacts"
                        android:textColor="#616161" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight=".5"
                        android:gravity="right"
                        android:text=">"
                        android:textColor="#aeaeae" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#e4e4e4" />

                <LinearLayout
                    android:id="@+id/layout_projects"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_projects"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight=".5"
                        android:text="Projects"
                        android:textColor="#616161" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight=".5"
                        android:gravity="right"
                        android:text=">"
                        android:textColor="#aeaeae" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#e4e4e4" />

                <LinearLayout
                    android:id="@+id/layout_contrb"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_contrb"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight=".5"
                        android:text="Contributions"
                        android:textColor="#616161" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight=".5"
                        android:gravity="right"
                        android:text=">"
                        android:textColor="#aeaeae" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#e4e4e4" />

                <LinearLayout
                    android:id="@+id/layout_awards"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_awards"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight=".5"
                        android:text="Awards"
                        android:textColor="#616161" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_weight=".5"
                        android:gravity="right"
                        android:text=">"
                        android:textColor="#aeaeae" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#e4e4e4" />

            </LinearLayout>
            <!-- main linear layout stop -->
        </RelativeLayout>
    </TableRow>

</TableLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="bottom">

    <Button
        android:id="@+id/sign_out_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#fc7351"
        android:textColor="#ffffff"
        android:text="Sign Out" >
    </Button>
</LinearLayout>

</RelativeLayout>
